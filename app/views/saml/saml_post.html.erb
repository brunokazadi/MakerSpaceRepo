<!DOCTYPE html>
<html class="h-100">
<head>
  <%= favicon_link_tag 'site-icon.jpg' %>
  <%= stylesheet_link_tag 'vendor' %>
  <%= stylesheet_link_tag 'application' %>
</head>
<body class="h-100" onload="document.forms[0].submit();">
<div class="container h-100">
  <div class="row h-100">
    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-xl-4 offset-xl-4 h-100">
      <div class="d-flex flex-column justify-content-center align-items-stretch h-100">
        <div style="flex-grow: 1"></div>

        <h1 class="text-center" style="font-size: 4rem">Maker<strong>Repo</strong></h1>

        <p class="text-center" style="font-size: 2rem;">Redirecting&hellip;</p>

        <%= form_tag(saml_acs_url, :class => "d-none") do %>
          <%= hidden_field_tag("SAMLResponse", @saml_response) %>
          <%= hidden_field_tag("RelayState", params[:RelayState]) %>
          <%= submit_tag "Submit" %>
        <% end %>

        <div style="flex-grow: 2"></div>
      </div>
    </div>
  </div>
</div>
</body>
</html>
