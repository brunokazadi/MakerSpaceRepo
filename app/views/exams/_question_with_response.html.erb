<div class=" text-left word-break">
  <h2><b><%= question.description %></b></h2>
</div>
<% if question.images.attached? %>
  <% question.images.each do |img| %>
    <%= image_tag(img.variant(resize: "500x500")) %>
  <% end %>
<% end %>
<hr>
<div class="text-left">
  <% question.answers.randomize_answers.each do |a| %>
    <% if response.answer.eql?(a) %>
      <p class="selected-answers" onclick="examResponse(<%= @exam.id %>, <%= a.id %>)">
        <%= a.description %>
      </p>
    <% else %>
      <p class="answers" onclick="examResponse(<%= @exam.id %>, <%= a.id %>)">
        <%= a.description %>
      </p>
    <% end %>
  <% end %>
</div>