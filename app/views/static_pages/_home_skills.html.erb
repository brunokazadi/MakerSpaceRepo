<div class="card home-card">
    <div class="card-body">
        <h2 class="d-inline me-3">Skills</h2><%= link_to 'Show all', "#{user_path(@user.username)}#profile-skills" %>
        <div class="d-flex flex-row flex-wrap mt-3">
            <% @user_skills.each do |skill, level| %>
                <p class="d-inline"><%= skill %>
                    <span class="skill-pill">
                        <i class="fa fa-circle" style="color: green"></i> <%= level %>
                    </span></p>
            <% end %>
        </div>
    </div>
</div>
