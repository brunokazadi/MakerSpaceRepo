<section class="page-contents" id="all-get-involved">
  <div class="d-flex flex-column gap-5">
    
    <!-- Header Section -->
    <div style="padding: 0;">
      <div class="text-center" style="position: relative; background-image: url('<%= asset_path('redesign/get_involved/jumbotron.png') %>'); background-size: cover; background-position: center; background-repeat: no-repeat; width: 100%; padding-bottom: 22.53%;">
        <div style="position: absolute; background: rgba(0, 0, 0, 0.3); width: 100%; height: 90%;">
          <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 100%; padding: 20px 0; max-width: 50%;">
            <h1 class="fw-bold" style="margin: 0; color: white; font-size: 3.8vw;">
              <%= t('all_get_involved.info.header') %>
            </h1>
            <p style="margin: 0; color: white; font-size: 1.5vw;">
              <%= t('all_get_involved.info.overview') %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Section: All Get Involved -->
    <section class="page-contents pt-5" id="all-get-involved">
      <div class="d-flex flex-column">
        
        <!-- Header Section with Image and Text -->
        <div class="d-flex" style="padding: 0;">
          <div class="flex-shrink-0" style="background-image: url('<%= asset_path('redesign/get_involved/workshops.png') %>'); background-size: cover; background-position: center; width: 50%;">
            <div style="position: relative; background: rgba(0, 0, 0, 0.5); width: 100%; height: 100%;">
              <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                <h1 class="text-white"><strong>Workshops</strong></h1>
              </div>
            </div>
          </div>
          <div class="d-flex align-items-center p-4" style="width: 50%;">
            <div>
              <h4 class="fw-bold"><%= t('all_get_involved.workshops.header') %></h4>
              <p><%= t('all_get_involved.workshops.overview') %></p>
            </div>
          </div>
        </div>

        <!-- Workshops Section -->
        <div class="text-center mt-4">
          <div class="d-flex justify-content-center">
            <div class="row justify-content-center" style="max-width: 1400px;">
              <div class="col-md-6 mb-4 d-flex align-items-stretch">
                <div class="card mb-4 shadow-lg d-flex flex-row p-3">
                  <%= image_tag('redesign/get_involved/image 22 (1).png', class: 'card-img-left', style: 'width: 60%; object-fit: cover;', alt: 'Workshop 1') %>
                  <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title" style="font-weight: bold;"><%= t('all_get_involved.workshops.sections.workshop_1.header') %></h5>
                    <p class="card-text"><%= t('all_get_involved.workshops.sections.workshop_1.overview') %></p>
                    <a>
                      <button class="btn btn-primary mt-auto">Sign Up</button>
                    </a>
                  </div>
                </div>
              </div>
              <div class="col-md-6 mb-4 d-flex align-items-stretch">
                <div class="card mb-4 shadow-lg d-flex flex-row p-3">
                  <%= image_tag('redesign/get_involved/image 22.png', class: 'card-img-left', style: 'width: 60%; object-fit: cover;', alt: 'Workshop 2') %>
                  <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title" style="font-weight: bold;"><%= t('all_get_involved.workshops.sections.workshop_2.header') %></h5>
                    <p class="card-text"><%= t('all_get_involved.workshops.sections.workshop_2.overview') %></p>
                    <a>
                      <button class="btn btn-primary mt-auto">Sign Up</button>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section>

    <!-- Section: Programs -->
    <section class="page-contents pt-5" id="all-get-involved">
      <div class="d-flex flex-column gap-5"> 

        <div>
          <!-- Header Section with Image and Text -->
          <div class="d-flex" style="padding: 0;">
            <div class="flex-shrink-0" style="background-image: url('<%= asset_path('redesign/get_involved/image 24 (1).png') %>'); background-size: cover; background-position: center; width: 50%;">
              <div style="position: relative; background: rgba(0, 0, 0, 0.5); width: 100%; height: 100%;">
                <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                  <h1 class="text-white"><strong>Programs</strong></h1>
                </div>
              </div>
            </div>
            <div class="d-flex align-items-center p-4" style="width: 50%;">
              <div>
                <h4 class="fw-bold"><%= t('all_get_involved.programs.header') %></h4>
                <p><%= t('all_get_involved.programs.overview') %></p>
              </div>
            </div>
          </div>

          <!-- Programs Section -->
          <div class="text-center mt-4">
            <div class="d-flex justify-content-center">
              <div class="row justify-content-center" style="max-width: 1400px;">
                <div class="col-md-6 mb-4 d-flex align-items-stretch">
                  <div class="card mb-4 shadow-lg d-flex flex-row p-3">
                    <%= image_tag('redesign/get_involved/image 22 (2).png', class: 'card-img-left', style: 'width: 60%; object-fit: cover;', alt: 'Program 1') %>
                    <div class="card-body d-flex flex-column justify-content-center">
                      <h5 class="card-title" style="font-weight: bold;"><%= t('all_get_involved.programs.sections.program_1.header') %></h5>
                      <p class="card-text"><%= t('all_get_involved.programs.sections.program_1.overview') %></p>
                      <a href="/volunteers">
                      <button class="btn btn-primary mt-auto">Sign Up</button>
                      </a>
                    </div>
                  </div>
                </div>
                <div class="col-md-6 mb-4 d-flex align-items-stretch">
                  <div class="card mb-4 shadow-lg d-flex flex-row p-3">
                    <%= image_tag('redesign/get_involved/image 22-1.png', class: 'card-img-left', style: 'width: 60%; object-fit: cover;', alt: 'Program 2') %>
                    <div class="card-body d-flex flex-column justify-content-center">
                      <h5 class="card-title" style="font-weight: bold;"><%= t('all_get_involved.programs.sections.program_2.header') %></h5>
                      <p class="card-text"><%= t('all_get_involved.programs.sections.program_2.overview') %></p>
                      <a href="/development_programs">
                      <button class="btn btn-primary mt-auto">Sign Up</button>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Additional Programs Section -->
        <div class="text-center mt-4">
          <div class="d-flex justify-content-center">
            <div class="row justify-content-center" style="max-width: 1400px; gap: 1rem;">
              <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card mb-4 shadow-lg d-flex flex-column p-3">
                  <%= image_tag('redesign/get_involved/image 22-3.png', class: 'card-img-top', style: 'object-fit: cover;', alt: 'Program 3') %>
                  <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title" style="font-weight: bold;"><%= t('all_get_involved.programs.sections.program_3.header') %></h5>
                    <p class="card-text"><%= t('all_get_involved.programs.sections.program_3.overview') %></p>
                    <a href="https://www.uottawa.ca/about-us/makerlaunch-boosting-engineering-entrepreneurs" target="_blank">
                      <button class="btn btn-primary mt-auto">Learn More</button>
                    </a>
                  </div>
                </div>
              </div>
              <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card mb-4 shadow-lg d-flex flex-column p-3">
                  <%= image_tag('redesign/get_involved/image 22-4.png', class: 'card-img-top', style: 'object-fit: cover;', alt: 'Program 4') %>
                  <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title" style="font-weight: bold;"><%= t('all_get_involved.programs.sections.program_4.header') %></h5>
                    <p class="card-text"><%= t('all_get_involved.programs.sections.program_4.overview') %></p>
                     <a href="https://www.uottawa.ca/faculty-engineering/entrepreneurship-courses-learning/simon-nehme-summer-entrepreneurship-school" target="_blank">
                      <button class="btn btn-primary mt-auto">Learn More</button>
                    </a>
                  </div>
                </div>
              </div>
            </div>
      
        <!-- What's Next Section -->
        <div class="align-items-stretch position-relative ">
          <div class="card mb-4 shadow-lg">
            <%= image_tag('redesign/get_involved/image 25.png', class: 'card-img-top', style: 'object-fit: cover;', alt: 'New Section Image') %>
            <div class="position-absolute w-100 h-100" style="top: 0; left: 0; background: rgba(0, 0, 0, 0.5);">
              <div class="d-flex flex-column justify-content-center align-items-center h-100 text-white p-4 text-center">
                <h4 class="fw-bold-1" style="font-size: 2vw; font-weight: bold; color: white;">What's Next?</h4>
                <p class="p-bold-1" style="font-size: 1.5vw; font-weight: bold; color: white;">
                  Learn, build, now <span style="color: #E44726;">launch</span>.
                </p>
                <p class="p-bold-2" style="font-size: 1.2vw;">
                  So you’ve brought your ideas to life, can you do more? Launch your projects and share your ideas with the industry.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Media Queries for Large Screens -->
        <style>
          @media (min-width: 2300px) {
            h4.fw-bold-1 {
              font-size: 45px !important;
            }
            p.p-bold-1 {
              font-size: 34px !important;
            }
            p.p-bold-2 {
              font-size: 27px !important;
            }
          }
        </style>

      </div>
    </section>

    <!-- Team Space Section -->
    <div>
      <div class="text-center" style="background-image: url('<%= asset_path('redesign/get_involved/image 26.png') %>'); background-size: cover; background-position: center; width: 100%; padding: 50px 0; color: white;">
        <h1 class="fw-bold" style="color: white;"><%= t('all_get_involved.team.title') %></h1>
        <p><%= t('all_get_involved.team.overview') %></p>
      </div>
    </div>

    <!-- Bottom Section -->
    <div>
      <div class="text-center" style="background-color: #f8f9fa; padding: 50px 0;">
        <p style="font-weight: bold;">
          <%= t('all_get_involved.bottom.overview') %>
        </p>
        <div class="container">
          <div class="row">
            <div class="col-md-3 text-start d-flex align-items-center">
              <h1 class="fw-bold">
                <%= t('all_get_involved.bottom.quote') %>
              </h1>
            </div>
            <div class="col-md-3 text-center" style="font-weight: bold;">
              <img src="<%= asset_path('redesign/get_involved/Rectangle 101.png') %>" class="img-fluid" alt="About teams">
              <p>About teams</p>
            </div>
            <div class="col-md-3 text-center" style="font-weight: bold;">
              <img src="<%= asset_path('redesign/get_involved/Rectangle 102.png') %>" class="img-fluid" alt="Follow our socials">
              <p>Follow our socials</p>
            </div>
            <div class="col-md-3 text-center" style="font-weight: bold;">
              <img src="<%= asset_path('redesign/get_involved/Rectangle 99.png') %>" class="img-fluid" alt="Join a team">
              <p>Join a team</p>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
