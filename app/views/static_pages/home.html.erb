<% if flash[:notice] %>
  <div id="notice"><%= flash[:notice] %></div>
<% end %>

<% if flash[:alert] %>
  <div id="alert"><%= flash[:alert] %></div>
<% end %>

<section id="home-header">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="jumbotron text-center">
          <h1 class="title">Welcome to Maker<strong>Repo</strong>!</h1>
          <p class="lead mb-4">Browse projects built using spaces provided by CEED & publish your own!</p>
          <% if signed_in? %>
            <p><%= link_to "My Profile", user_path(current_user.username), class: "btn btn-primary btn-lg" %></p>
          <% else  %>
            <p><%= link_to "Sign Up", user_path('new'), class: "btn btn-primary btn-lg" %></p>
          <% end %>
      </div>
    </div>
  </div>

  <a class="down-indicator" href="#under-top">
    <i class="fa fa-chevron-down fa-5x chevron"></i>
  </a>
</section>

<div id="under-top"></div>

