<% provide(:title, 'Contact') %>

<section id="contact-us">

  <div class="title">Contact Us</div>

  <div class="card-group">
  <% @contact_info.each_with_index do |space, i| %>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <a href="<%= space.url.presence %>" target="_blank">
              <%= space.name %>
            </a>
          </h5>
          <p class="card-text">
          <ul class="fa-ul">
            <li><%= fa_icon('envelope-o li', text: space.email) %></li>
            <li><%= fa_icon('map-marker li', text: space.address) if space.address.present? %></li>
            <li><%= fa_icon('phone li', text: space.phone_number) if space.phone_number.present? %></li>
          </ul>
          </p>
        </div>
      </div>

    <% if (i + 1) % 3 == 0 %>
        </div>
        <div class="card-group">
    <% end %>

  <% end %>
  </div>

  <div class="title">Follow Us</div>
  <div class="row">
    <div id="links" class="row">
      <a href="https://www.facebook.com/uOCEED" target="_blank"><i class="fa fa-facebook-official" aria-hidden="true"></i>
        @uOCEED</a>
      <a href="https://www.instagram.com/uoceed/" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i>
        @uoceed</a>
      <a href="https://www.linkedin.com/company/the-centre-for-entrepreneurship-and-engineering-design/"><i class="fa fa-linkedin" aria-hidden="true"></i>
        CEED</a>
    </div>
  </div>
</section>
