<% provide(:title, "Contact") %>

<section id="contact-us">

  <div class="title">Contact Us</div>

  <div class="card-group">
  <% @contact_info.each_with_index do |space, i| %>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <a href="<%= space.url if space.url.present? %>" target="_blank">
              <%= space.name %>
            </a>
          </h5>
          <p class="card-text">
          <ul class="fa-ul">
            <li><%= fa_icon("envelope-o li", text: space.email) %></li>
            <li><%= fa_icon("map-marker li", text: space.address) if space.address.present? %></li>
            <li><%= fa_icon("phone li", text: space.phone_number) if space.phone_number.present? %></li>
          </ul>
          </p>
        </div>
      </div>

    <% if (i + 1) % 3 == 0 %>
        </div>
        <div class="card-group">
    <% end %>

  <% end %>
  </div>

  <div class="title">Follow Us</div>
  <div class="row">
    <div id="links" class="col-md-4">
      <a href="https://www.facebook.com/uOttawa.CEED/" target="_blank"><i class="fa fa-facebook-official" aria-hidden="true"></i>
        @uOttawa.CEED</a><br>
      <a href="https://www.instagram.com/uottawaceed/" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i>
        @uottawaceed</a><br>
      <a href="https://twitter.com/uottawaceed" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i>
        @uOttawaCEED</a><br>
    </div>
    <div id="links" class="col-md-4">
      <a href="https://www.facebook.com/uOmakerspace/" target="_blank"><i class="fa fa-facebook-official" aria-hidden="true"></i>
        @uOMakerspace</a><br>
      <a href="https://www.instagram.com/uomakerspace/" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i>
        @uOMakerspace</a><br>
      <a href="https://twitter.com/uomakerspace?lang=en" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i>
        @uOMakerspace</a><br>
    </div>
    <div id="links" class="col-md-4">
      <a href="https://www.facebook.com/uobrunsfield/" target="_blank"><i class="fa fa-facebook-official" aria-hidden="true"></i>
