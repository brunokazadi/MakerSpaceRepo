<div class="card home-card">
    <div class="card-body">
        <h2 class="d-inline">Makerstore</h2>
        <a href="https://makerstore.ca/"><%= t('home.show_all') %></a>
        <p><%= t('home.makerstore.subtext') %></p>
        <div class="row flex-nowrap">
            <button class="col-auto btn btn-link text-secondary fs-1" onclick="document.getElementById('storeCarousel').scrollBy({left: -250, behavior: 'smooth'})"><i class="fa fa-angle-left"></i></button>
            <% merch = [
                 { title: 'CEED Merch', image_url: 'redesign/merch.png', link: 'https://makerstore.ca/shop/ols/categories/merch' },
                 { title: 'Cables', image_url: 'redesign/cables.png', link: 'https://makerstore.ca/shop/ols/categories/cables' },
                 { title: 'Micro Controllers', image_url: 'redesign/microcontrollers.png', link: 'https://makerstore.ca/shop/ols/categories/micro-controllers' },
                 { title: 'LEDs', image_url: 'redesign/leds.png', link: 'https://makerstore.ca/shop/ols/categories/leds' },
                 { title: 'Materials', image_url: 'redesign/materials.png', link: 'https://makerstore.ca/shop/ols/categories/materials' },
                 { title: 'Motors', image_url: 'redesign/motors.png', link: 'https://makerstore.ca/shop/ols/categories/motors' }
               ] %>
            <div class="col carouselCardPack" id="storeCarousel">
                <div class="card-group d-flex flex-nowrap">
                    <% merch.each do |item| %>
                        <%= link_to item[:link], class: 'card link-dark', target: '_blank', rel: 'noopener' do %>
                            <%= image_tag item[:image_url], alt: item[:title], class: 'card-img-top', loading: 'lazy' %>
                            <div class="card-body">
                                <p class="fs-5 card-title"><%= item[:title] %></p>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>
            <button class="col-auto btn btn-link text-secondary fs-1" onclick="document.getElementById('storeCarousel').scrollBy({left: 250, behavior: 'smooth'})"><i class="fa fa-angle-right"></i></button>
        </div>
    </div>
</div>
