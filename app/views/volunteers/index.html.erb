<section class="page-contents">
  <div class="edit-column">

    <h2 class="text-center">Welcome to the Volunteer Area</h2>
    <br>
    <div id="staff-buttons">
      <% if current_user.volunteer? %>
        <%= link_to 'Getting Started', "#", class: "staff-button" %> <br /> <br />
        <%= link_to 'Training', "#", class: "staff-button" %> <br /> <br />
        <%= link_to 'Tasks', volunteer_tasks_path, class: "staff-button" %> <br /> <br />
        <%= link_to 'Hours', volunteer_hours_path, class: "staff-button" %> <br /> <br />
        <%= link_to 'Settings', edit_skill_path(current_user.skill.id), class: "staff-button"%> <br /> <br />
      <% else %>
        <%= link_to 'Volunteer Requests', volunteer_requests_path, class: "staff-button" %><br></br>
        <%= link_to 'Volunteer Tasks', volunteer_tasks_path, class: "staff-button" %><br></br>
        <%= link_to 'New Volunteer Task', new_volunteer_task_path, class: "staff-button" %><br></br>
        <%= link_to 'Volunteer Hour Requests', volunteer_hour_requests_volunteer_hours_path, class: "staff-button" %><br></br>
        <%= link_to 'Volunteer Hour Per User', volunteer_hour_per_user_volunteer_hours_path, class: "staff-button" %><br></br>
        <%= link_to 'List of Emails', emails_volunteers_path, class: "staff-button" %><br></br>
        <%= link_to 'List of Volunteers', volunteer_list_volunteers_path, class: "staff-button" %><br></br>
        <%= link_to 'Announcements', announcements_path, class: "staff-button" %><br></br>
        <%= link_to 'New Announcement', new_announcement_path, class: "staff-button" %><br></br>
      <% end %>
    </div>


  </div>
