<h1 class="text-center mt-3">New Makerstore link</h1>
<div class="col-lg-12 mx-auto">
    <%= form_with model: [:staff, @makerstore_link] do |f| %>
        <div class="mb-3">
            <%= f.label :title, class: 'form-label' %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="mb-3">
            <%= f.label :url, 'URL to makerstore listing', class: 'form-label' %>
            <%= f.url_field :url, class: 'form-control', placeholder: 'https://makerstore.ca/shop/...' %>
        </div>
        <div class="mb-3">
            <%= f.label :image, class: 'form-label' %>
            <%= f.file_field :image, class: 'form-control' %>
        </div>
        <div class="mb-3 form-check">
            <%= f.label :shown, class: 'form-check-label' %>
            <%= f.check_box :shown, { checked: true, class: 'form-check-input' } %>
        </div>
        <div class="d-flex justify-content-between">
            <%= f.submit class: 'btn btn-primary' %>
            <%= link_to 'Back', staff_makerstore_links_path, class: 'btn btn-secondary' %>
        </div>
    <% end %>
</div>
