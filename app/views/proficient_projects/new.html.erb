<% provide(:title, "New Proficient Project") %>
<section class="card">
  <div class="col-lg-7 mx-auto">
    <br />
    <h2 class="text-center">New Proficient Project</h2>
      <div class="row">
        <div class="col-lg-12">
          <%= form_for @proficient_project, url: {controller: "proficient_projects", action: "create"}, html: {multipart: true} do |f| %>
            <div class="form-group">
              <%= f.label :title, "Title*" %>
              <%= f.text_field :title, id:"repository_title", placeholder: "Title of the proficient project...", class: 'form-control', required: true %>
              <br />
              <%= f.label :description, "Description*" %>
              <%= f.text_area :description, placeholder: "Description of the proficient project...", class: 'form-control', required: true, id: 'redactor' %>
              <br />
              <%= f.label :training_id, "Category*" %>
              <%= f.select(:training_id, @training_categories , {} , {:class => "form-control"}) %>
              <br />
              <%= f.label :level, "Level*" %>
              <%= f.select(:level, @training_levels , {} , {:class => "form-control"}) %>
              <br />
              <%= f.label :cc, "Cc Points" %>
              <%= f.number_field(:cc, :class => "form-control") %>
              <br />
              <%= f.label :proficient, "Proficient" %>
              <br />
              <%= f.label :proficient, "Yes" %>
              <%= f.radio_button(:proficient, true , :style => 'display:inline') %>
              <%= f.label :proficient, "No" %>
              <%= f.radio_button(:proficient, false , :style => 'display:inline') %>
              <br />
              <br />
                <%= label :badge_requirements, "Prerequisite Badge" %>
                <%= select_tag :badge_requirements, options_from_collection_for_select(BadgeTemplate.all, 'id', 'badge_name'), {:class => "form-control", :include_blank => true} %>
              <br>
              <%= f.label :badge_id, "Badge that will be acquired" %>
              <%= f.select(:badge_id, options_for_select(BadgeTemplate.all.collect {|badge| [ badge.badge_name, badge.badge_id ] }, :selected => f.object.badge_id), {:include_blank => true}, {:class => "form-control"}) %>
              <br>
              <br>
              <%= label_tag :file, "Project files"%>
              <label class="custom-instructable-upload">
                <%= file_field_tag 'files[]', type: :files, multiple: true %>
                Choose files...
              </label>
              <div id="file-container"></div>

              <%#= label_tag :video, "Videos"%>
<!--              <label class="custom-instructable-upload">-->
                <%#= file_field_tag 'videos[]', type: :videos, multiple: true %>
<!--                Choose videos...-->
<!--              </label>-->
<!--              <div id="video-container"></div>-->

              <br />
              <%= label_tag :photo, "Gallery*" %>
              <div class="repo-image mx-auto">
                <div id="dragndrop">
                  <%= fa_icon 'cloud-upload' %>
                  <p>Drag &amp; Drop</p>
                </div>
                <label class="custom-image-upload">
                  <%= file_field_tag 'images[]', type: :files, multiple: true %>
                  or choose an image...
                </label>
              </div>
              <div id="image-container" class="mx-auto"></div>

              <br />

              <div class="text-center">
                <%= f.submit "Create Proficient Project", class: "btn btn-primary", id: "waiting-save-button" %>
                <br />
                <br />
                This could take several minutes. Do not refresh this page.
                <br />
                <span id="status-save"> </span>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</section>

