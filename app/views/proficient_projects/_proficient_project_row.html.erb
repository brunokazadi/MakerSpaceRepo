<div class="well">
    <div class="col-xs-4">
      <% if proficient_project.cc.nil? || proficient_project.cc.eql?(0) || current_user.order_items.completed_order.where(proficient_project: proficient_project).present? %>
        <a href="<%= proficient_project_path(proficient_project.id) %>"><button type="button" class="btn btn-outline-success mb-2">Show Project</button></a>
      <% elsif current_user.order_items.where(proficient_project: proficient_project).present? %>
        <button type="button" class="btn btn-outline-success disabled">Added to cart</button>
      <% else %>
        <%= form_for order_item, remote: true do |f| %>
          <div class="input-group">
            <%#= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
            <%= f.hidden_field :quantity, value: 1 %>
            <div class="input-group-btn mx-auto mb-2">
              <%= f.hidden_field :proficient_project_id, value: proficient_project.id %>
              <%= f.submit "Add to Cart", class: "btn btn-secondary", id: "cart-button" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
</div>