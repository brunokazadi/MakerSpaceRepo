<div class="well">
  <div class="col-xs-4">
    <% badge_requirements = proficient_project.badge_requirements %>
    <% order_items = user_order_items.where(proficient_project: proficient_project) %>
    <% order_items.each do |order_item| %>
      <button type="button" class="btn disabled mb-2 pp-status-button w3-opacity-off"><%= order_item.status %></button>
    <% end %>
    <br />
    <% if order_items.where(status: ["In progress", "Awarded", "Waiting for approval"]).present?  %>
      <a href="<%= proficient_project_path(proficient_project.id) %>"><button type="button" class="btn btn-success mb-2 w3-opacity-off">Show Project</button></a>
    <% elsif current_user.order_items.where(proficient_project: proficient_project, status: "In progress").present?  %>
      <button type="button" class="btn btn-success disabled mb-2 w3-opacity-off">Added to cart</button>
    <% elsif !current_user.has_required_badges?(badge_requirements) %>
      <button type="button" class="btn btn-danger disabled mb-2 w3-opacity-off">You don't have the required badges</button>
    <% else %>
      <%= form_for order_item, remote: true do |f| %>
        <div class="input-group">
          <%= f.hidden_field :quantity, value: 1 %>
          <div class="input-group-btn mx-auto mb-2">
            <%= f.hidden_field :proficient_project_id, value: proficient_project.id %>
            <%= f.submit "Add to Cart", class: "btn btn-secondary w3-opacity-off", id: "cart-button" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>