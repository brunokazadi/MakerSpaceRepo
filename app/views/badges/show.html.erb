<div class="container">
    <div class="row align-items-start">
        <div class="col-4 py-3 px-my-5">
            <a style="width: 300px;" target="_blank">
                <%= image_tag(@badge.badge_template.image_url, style: 'width: inherit;display:block; margin:0 auto;', alt: "Badge image: #{@badge.badge_template.localized_name}") %>
            </a>
        </div>
        <div class="col-8 py-3 px-my-5">
            <h1><%= @badge.badge_template.localized_name %></h1>
            <h4 class="my-3 fw-bold">Badge Owner: <%= @badge.issued_to %></h4>
            <h5 class="my-3">Issued by CEED/CGEC - uOttawa on <%= @badge.created_at.to_date.to_fs :long_ordinal %></h5>
            <p><%= @badge.badge_template.badge_description %></p>

            <a class="my-4 text-decoration-underline" href="https://www.uottawa.ca/faculty-engineering/">Learn more</a>

            <div class="my-5">
                <h5>Skills</h5>
                <p><%= @badge.badge_template.list_of_skills %></p>
            </div>
        </div> 

    </div>
</div>
