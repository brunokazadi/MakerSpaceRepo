<svg width="<%= width %>" height="<%= height %>" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
    <style>
     text { font: bold 0.5rem sans-serif; };
    </style>

    <g
        <% if level == :one %>
            fill="#488b2c"
        <% elsif level == :two %>
            fill="#dc4720"
        <% else %>
            fill="#488b2c"
        <% end %>
    >
        <circle cx="50%" cy="50%" r="50%" />
        <circle cx="50%" cy="50%" r="45%" stroke="white" stroke-width="2" />
    </g>

    <line x1="6%" y1="50%" x2="94" y2="50%" stroke="black"/>

    <text x="50%" y="65%" fill="white" text-anchor="middle" >
        <tspan x="50%"><%= name %></tspan>
        <tspan x="50%" dy="1.1em">I</tspan>
    </text>

    <path d="m 6 50
             A 1 1 0 0 1 94 50" fill="black" />
    <image x="35%" y="25%" width="30%" height="25%" href="/assets/logos/CEED_WHITE.svg"/>
    <image x="35%" y="10%" width="30%" height="25%" href="/assets/logos/CGEC_WHITE.svg"/>
</svg>