<div class="modal fade" id="flag_message" tabindex="-1" role="dialog" aria-labelledby="flag_message" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Flag comments</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= @repo_user.flag_message %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form_tag(flag_users_path, :method => "post") do %>
          <%= hidden_field_tag :flagged_user, nil, value: @repo_user.id %>
          <%= hidden_field_tag :flag, nil, value: "unflag" %>
          <%= submit_tag "Remove Flag", class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="flag_user" tabindex="-1" role="dialog" aria-labelledby="flag_user" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Flag : <%= @repo_user.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag(flag_users_path, :method => "post") do %>
          <%= hidden_field_tag :flagged_user, nil, value: @repo_user.id %>
          <%= hidden_field_tag :flag, nil, value: "flag" %>
          <div class="form-group">
            <%= text_field_tag :flag_message, nil, placeholder: "Message", class: "form-control" %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-danger">Flag User</button>
        <% end %>
        </div>
    </div>
  </div>
</div>