<div class="mx-auto">
        <%= link_to 'Back to index', faqs_path %>
        <%= form_with model: @faq, html: { autocomplete: 'off' } do |f| %>
                <div class="row">
                        <div class="col-lg-6">
                                <%= f.label :title_en, 'English Title', class: 'form-label' %>
                                <%= f.text_field :title_en, class: 'form-control' %>
                                <%= f.label :body_en, class: 'form-label' %>
                                <%= f.trix_editor :body_en, class: 'form-control' %>
                        </div>
                        <div class="col-lg-6">
                                <%= f.label :title_fr, 'French Title', class: 'form-label' %>
                                <%= f.text_field :title_fr, class: 'form-control' %>
                                <%= f.label :body_fr, class: 'form-label' %>
                                <%= f.trix_editor :body_fr, class: 'form-control' %>
                        </div>
                </div>
                <%= f.submit 'Submit', class: 'btn btn-primary my-3' %>
        <% end %>
</div>
