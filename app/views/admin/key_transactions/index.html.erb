<% provide(:title, 'Key Transactions') %>
<section>
  <h2 class="m-0 fw-bold py-4 text-center">Key Transactions</h2>

  <div class="d-flex flex-row gap-2 justify-content-center mb-4">
    <%= link_to 'Key Management', admin_keys_path, class: 'btn btn-primary' %>
    <%= link_to 'Key Requests', requests_admin_keys_path, class: 'btn btn-primary' %>
  </div>

  <div class="accordion" id="keysAccordion">
    <div class="accordion-item">
      <h2 class="accordion-header" id="returned">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Returned
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="returned" data-bs-parent="#keysAccordion">
        <div class="accordion-body">
          <%= render partial: 'admin/key_transactions/key_transaction_table', locals: { key_transactions: @key_transactions.returned, show_actions: false } %>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="currently-held">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
          Currently Held
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse show" aria-labelledby="currently-held" data-bs-parent="#keysAccordion">
        <div class="accordion-body">
          <%= render partial: 'admin/key_transactions/key_transaction_table', locals: { key_transactions: @key_transactions.not_returned, show_actions: false } %>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="deposit-refund">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
          Awaiting deposit refund
        </button>
      </h2>
      <div id="collapseThree" class="accordion-collapse collapse show" aria-labelledby="deposit-refund" data-bs-parent="#keysAccordion">
        <div class="accordion-body">
          <%= render partial: 'admin/key_transactions/key_transaction_table', locals: { key_transactions: @key_transactions.awaiting_deposit_return, show_actions: true } %>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="all">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
          All Key Transactions
        </button>
      </h2>
      <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="all" data-bs-parent="#keysAccordion">
        <div class="accordion-body">
          <%= render partial: 'admin/key_transactions/key_transaction_table', locals: { key_transactions: @key_transactions, show_actions: false } %>
        </div>
      </div>
    </div>
  </div>
</section>