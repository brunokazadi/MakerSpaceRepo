<section>
    <h2 class="text-center font-weight-bold py-3">Admin Course Manager</h2>

    <p class="text-center"><%= link_to "New Course", new_admin_course_name_path, class: "btn btn-secondary" %></p>
    <br />
   <table class="table table-striped mb-3">
      <tr class="text-center">
        <th>Course</th>
        <th>Action</th>
      </tr>

      <% @courses.each do |t| %>
        <tr>
          <td><%= t.name %></td>
          <td><%= link_to "Edit", edit_admin_course_name_path(t.id), class:"btn btn-primary" %></td>
        </tr>
      <% end %>

    </table>
  <br>
</section>