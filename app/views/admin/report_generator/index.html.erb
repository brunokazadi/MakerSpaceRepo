<% provide(:title, "Reports") %>
<section id="report">
  <div class="edit-column">
    <h1>Report Generator</h1>

    <%= form_tag admin_report_generator_generate_path, method: :post do %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= label_tag(:semester, "Semester") %>
          <%= select_tag(:semester, options_for_select([["Winter", :winter], ["Spring/Summer", :summer], ["Fall", :fall]]), { class: "form-control" }) %>
        </div>

        <div class="form-group col-md-6">
          <%= label_tag(:year, "Year") %>
          <%= number_field_tag(:year, DateTime.now.year, { class: "form-control" }) %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag(:type, "Report Type") %>
        <%= select_tag(:type, options_for_select(@report_types), { class: "form-control" }) %>
      </div>

      <%= submit_tag("Generate", { class: "btn btn-primary" }) %>
    <% end %>
  </div>
</section>