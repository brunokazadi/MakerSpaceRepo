<section>
  <h2 class="font-weight-bold py-3 text-center">Admin's Training Sessions Manager</h2>
  <div class="text-center">
    <%= link_to 'See Demotions', demotions_admin_certifications_path, class: 'btn btn-primary' %>
  </div>
  <br />

  <div class="form-group">
    <div class="form-inline">
      <%= text_field_tag(:search, search(params[:search]), placeholder: "Search by Course, Training, User, Date ...", class: 'form-control training_session_searchbar', style: "width: 100%") %>
    </div>
  </div>

  <div class="table-training-sessions">
    <%= render 'admin/training_sessions/training_session_table' %>
  </div>
</section>

<%= javascript_pack_tag 'admin_training_sessions' %>