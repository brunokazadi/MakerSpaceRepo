<% provide(:title, 'Manage Roles') %>

<section>
  <div class="text-center">
    <h2 class="fw-bold py-3">Manage Roles</h2>
    <h3>Visit each user to update their roles.</h3>
  </div>
  <br>
  <div>
    <h3>Admins on Makerepo</h3>
    <table class="table table-striped" id="admin_table">
      <%= render partial: 'user_table', locals: { users: @admins, user_spaces: @admin_spaces, role_form_id: 'updateRoleAdmin', space_form_id: 'updateSpaceAdmin' } %>
    </table>
    <br /><br />

    <h3>Staff on Makerepo</h3>
    <table class="table table-striped" id="staff_table">
      <%= render partial: 'user_table', locals: { users: @staff, user_spaces: @staff_spaces, role_form_id: 'updateRoleStaff', space_form_id: 'updateSpaceStaff' } %>
    </table>

    <table class="table table-striped">
      <h3>Volunteers on Makerepo</h3>
      <thead class="table-primary">
        <tr class="text-center">
          <th class="name-header">Username</th>
          <th class="name-header">Name</th>
          <th class="email-header">Email</th>
        </tr>
      </thead>
      <% @volunteers.each do |volunteer| %>
        <tr>
          <td class="username-cell"><%= link_to volunteer.username, user_url(volunteer.username) %></td>
          <td class="name-cell"><%= volunteer.name %></td>
          <td class="email-cell"><%= volunteer.email %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <br />
</section>
