<section>
  <div class="padding-10">
    <div class="text-center my-3">
      <h2 class="fw-bold">Edit Badge Template</h2>
      <%= link_to 'Back', admin_badge_templates_path, class: 'btn btn-secondary' %>
    </div>
    <div class="border rounded p-3 text-center">
      <p class="fs-3"><b><%= @badge_template.badge_name %></b></p>
      <p><%= @badge_template.acclaim_template_id %></p>
      <p><%= @usage_count %> times used</p>
      <hr />
      <p><%= @badge_template.badge_description %></p>
    </div>

    <div class="container my-5">
      <div class="row">
        <div class="col-lg-12">
          <%= form_for @badge_template, url: { controller: 'badge_templates', action: 'update' } do |f| %>
            <div class="row">
              <div class="col-md-12">
                <div class="mb-3 text-center">
                  <%= f.label :training_id, 'Training related to the badge templates', class: 'form-label' %>
                  <%= f.select(:training_id, options_for_select(Training.all.pluck(:name, :id), selected: f.object.training_id), { include_blank: true }, { class: 'form-control form-select' }) %>
                </div>
              </div>
              <div class="col-md-12">
                <div class="mb-3 text-center">
                  <%= f.label :training_level, 'Training related to the badge templates', class: 'form-label' %>
                  <%= f.select(:training_level, options_for_select(%w[Beginner Intermediate Advanced], selected: f.object.training_level), { include_blank: true }, { class: 'form-control form-select' }) %>
                </div>
              </div>
              <div class="col-lg-12 text-center">
                <%= f.submit 'Update Badge Template', class: 'btn btn-secondary btn-xl' %>
              </div>
            </div>
          <% end %>
          <%= button_to 'Delete', { controller: 'admin/badge_templates', action: :destroy, id: @badge_template.id }, method: :delete,
                                                                                                                     data: { confirm: 'Are you sure that you want to delete this template?' },
                                                                                                                     class: 'btn btn-danger ' %>
        </div>
      </div>
    </div>
  </div>
</section>
