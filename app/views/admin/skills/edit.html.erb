<section class="page-contents">
  <div class="edit-column">
    <h2 class="text-center">Editing <b><%= @skill.name.capitalize %></b></h2>
    <%= form_for @skill, url: {controller: "admin/skills", action: "update"} do |f| %>
      <div class="container">
        <div class="row text-center">
          <div class="col-md-12 form-group">
            Name: <%= f.text_field :name, placeholder: "Write a unique name...", class: 'form-control', required: true %>
          </div>

          <div class="col-md-12 form-group my-3">
            <%= f.submit "Update Skills", class: "btn btn-secondary btn-xl" %>
          </div>
        </div>
      </div>
    <% end %>

    <% unless Training.find_by_skills_id(@skill.id).present? %>
      <%=link_to "Delete", { controller: "admin/skills" ,action: :destroy, id: @skill.id }, method: :delete,
                 data: { confirm: 'Are you sure that you want to delete this Skill Type ?' },
                 class:"btn btn-danger"%>
    <% end %>
  </div>
</section>