<div class="mt-4">
    <%= form_tag staff_dashboard_change_space_path, method: :put do %>
        <div class="input-group mb-3">
            <%= label_tag :space_id, 'Space', class: 'input-group-text' %>
            <%= select_tag :space_id, options_for_select(@spaces.pluck(:name, :id), selected: @space_id), class: 'form-select', id: "space_id" %>
            <%= hidden_field_tag :shifts, true %>
            <button class="btn btn-outline-secondary" type="submit">Go</button>
        </div>
    <% end %>
</div>

<section id="calendar_container">
    <div class="row">
        <div id="checkbox_container" class="col-md-3">
            <button type="button" id="addEventButton" class="btn btn-outline-primary my-2 w-100" data-bs-toggle="modal" data-bs-target="#eventModal">
            + Add Event
            </button>

            <p class="fw-bold mt-1">Events / Unavailabilities</p>
            <div id="staff_checkbox_container"></div>
            <p class="fw-bold">Events</p>
            <div id="events_checkbox_container"></div>
            <p class="fw-bold mt-1">Imported Calendars</p>
            <div id="calendars_checkbox_container"></div>

            <div class="my-4">
                <%= form_with url: "/admin/events/publish", method: :patch, local: false, html: { class: "useTurbo dropdown show mb-2" } do %>
                    <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Publish Drafts in Current View
                    </button>

                    <%= hidden_field_tag :view_start_date, nil, class: "view_start_date" %>
                    <%= hidden_field_tag :view_end_date, nil, class: "view_end_date" %>
                    <div class="dropdown-menu">
                        <%= submit_tag "Confirm Publish", class: "dropdown-item py-2" %>
                    </div>
                <% end %>

                <%= form_with url: "/admin/events/delete_drafts", method: :delete, local: false, html: { class: "useTurbo dropdown show mb-2" } do %>
                    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Delete Drafts in Current View
                    </button>

                    <%= hidden_field_tag :view_start_date, nil, class: "view_start_date" %>
                    <%= hidden_field_tag :view_end_date, nil, class: "view_end_date" %>
                    <div class="dropdown-menu">
                        <%= submit_tag "Confirm Delete", class: "dropdown-item py-2" %>
                    </div>
                <% end %>
                
                <%= form_with url: "/admin/events/copy", method: :post, local: false, html: { class: "useTurbo dropdown show" } do %>
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Copy Events
                    </button>

                    <%= hidden_field_tag :view_start_date, nil, class: "view_start_date" %>
                    <%= hidden_field_tag :view_end_date, nil, class: "view_end_date" %>
                    <div class="dropdown-menu">
                        <%= submit_tag "Confirm Copy", class: "dropdown-item py-2" %>
                    </div>
                <% end %>
            </div>
        </div>

        <div id="calendar" class="col-md-9 w-md-100"></div>
    </div>
</section>

<div id="spinner_container">
    <div id='spinner' class="spinner-border" role="status"></div>
</div>

<%= render 'form' %>

<style>
    .fc-timegrid-slots tbody tr {
        height: 25px !important;
    }

    #calendar_container {
        display: none;
    }

    #spinner_container {
        height: 50vh;
        display: grid;
        place-items: center;
    }

    .container {
        max-width: none !important;
    }
</style>