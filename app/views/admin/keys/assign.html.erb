<section>
  <h2 class="mb-3 fw-bold py-3 text-center">Assign key</h2>

  <%= form_for @key, url: { controller: 'admin/keys', action: 'assign_key' } do |f| %>
    <div class="row">
      <div class="col-xl-6 offset-xl-3 col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-12">
        <div class="mb-3">
          <%= f.label :supervisor_id, 'Supervisor', class: 'form-label' %>
          <%= f.select :supervisor_id, options_for_select(User.where(role: 'admin').order(name: :asc).pluck(:name, :id), selected: @user.id), { prompt: 'Choose Supervisor...' }, { class: 'form-control', id: 'supervisor-select' } %>
        </div>
        <div class="mb-3">
          <%= f.label :key_request_id, 'User', class: 'form-label' %>
          <%= f.select :key_request_id, options_for_select(KeyRequest.where(status: :approved).joins(:user).order('users.name ASC').pluck('users.name', 'key_requests.id')), { prompt: 'Choose User...' }, { class: 'form-control', id: 'key-request-select' } %>
        </div>
        <div class="mb-5">
          <%= label_tag :deposit_amount, 'Deposit Amount', class: 'form-label' %>
          <%= number_field_tag :deposit_amount, 0, { class: 'form-control', required: true, step: 0.01, min: 0, max: 999.99 } %>
        </div>

        <div class="text-center">
          <%= f.submit 'Assign Key', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</section>