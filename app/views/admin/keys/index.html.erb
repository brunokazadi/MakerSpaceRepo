<% provide(:title, 'Keys') %>
<section>
  <h2 class="m-0 fw-bold py-4 text-center">Key Management</h2>

  <div class="d-flex flex-row gap-2 justify-content-center mb-4">
    <%= link_to 'Add a new Key', new_admin_key_path, class: 'btn btn-success' %>
    <%= link_to 'Key Requests', requests_admin_keys_path, class: 'btn btn-primary' %>
  </div>

  <div class="accordion" id="keysAccordion">
    <div class="accordion-item">
      <h2 class="accordion-header" id="keysHeld">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Keys Being Held
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="keysHeld" data-bs-parent="#keysAccordion">
        <div class="accordion-body">
          <%= render partial: 'admin/keys/keys_table', locals: { keys: @keys.where(status: :held), show_status: false } %>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="keysInventory">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Keys in Inventory
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="keysInventory" data-bs-parent="#keysAccordion">
        <div class="accordion-body">
          <%= render partial: 'admin/keys/keys_table', locals: { keys: @keys.where(status: :inventory), show_status: false } %>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="keysAll">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          All Keys
        </button>
      </h2>
      <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="keysAll" data-bs-parent="#keysAccordion">
        <div class="accordion-body">
          <%= render partial: 'admin/keys/keys_table', locals: { keys: @keys, show_status: true } %>
        </div>
      </div>
    </div>
  </div>
</section>