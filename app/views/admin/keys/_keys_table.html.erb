<div class="table-responsive">
  <table class="table text-center m-0">
    <thead class="table-primary">
    <tr>
      <th>Key Number</th>
      <th>Space</th>
      <th>Room</th>
      <th>User</th>
      <th>Supervisor</th>
      <th>Email</th>
      <% if show_status %>
        <th>Status</th>
      <% end %>
      <th>Deposit</th>
      <th>Certifications</th>
      <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    <% keys.each do |key| %>
      <tr>
        <td><%= link_to key.number, admin_key_path(key.id), target: '_blank', rel: 'noopener' %></td>
        <td><%= key.space.name %></td>
        <td><%= key.room %></td>
        <td><%= link_to key.user.name, user_path(key.user.username), target: '_blank', rel: 'noopener' unless key.user.nil? %></td>
        <td><%= link_to key.supervisor.name, user_path(key.supervisor.username), target: '_blank', rel: 'noopener' unless key.supervisor.nil? %></td>
        <td><%= key.user&.email %></td>
        <% if show_status %>
          <td><%= key.status.humanize.capitalize %></td>
        <% end %>
        <td>
          <%= key.deposit_return_date.nil? ? 'Not Returned' : "Returned on #{key.deposit_return_date} " %>
        </td>
        <td>
          TODO: fix files
        </td>
        <td>
          <%= link_to 'Show', admin_key_path(key.id), class: 'w-100 py-1 mb-1 btn btn-secondary' %>
          <%= link_to 'Edit', edit_admin_key_path(key.id), class: 'w-100 py-1 mb-1 btn btn-primary' %>
          <%= button_to 'Revoke', revoke_key_admin_keys_path(id: key.id), method: :patch, class: 'w-100 py-1 mb-1 btn btn-warning' if key.status_held? %>
          <%= button_to 'Delete', admin_key_path(key.id), method: :delete, class: 'w-100 py-1 btn btn-danger', data: { confirm: 'Are you sure you want to delete this key?' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>