<h2 class="text-center pt-2 mb-5">Question in <strong>"<%= @question.trainings.map(&:name).join(", ").html_safe if @question.trainings.present? %>"</strong></h2>

<div class="text-left word-break">
  <h2><b><%= @question.description %></b></h2>
</div>

<div class="text-center">
  <% if @question.images.attached? %>
    <% @question.images.each do |img| %>
      <%= image_tag(img.variant(resize: "500x500")) %>
    <% end %>
  <% end %>
</div>

<hr>

<div class="text-left">
  <% @question.answers.randomize_answers.each do |a| %>
    <% if a.correct %>
      <p class="correct-answers"><%= a.description %></p>
    <% else %>
      <p class="answers"><%= a.description %></p>
    <% end  %>
  <% end %>
</div>