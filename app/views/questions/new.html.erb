<section class="page-contents">
  <div class="edit-column">

    <h2 class="text-center">New Question</h2>

    <div class="container my-5">
      <div class="row">
        <div class="col-lg-12">
          <%= form_for @new_question, url: {controller: "questions", action: "create"}, :html => { class:"needs-validation", novalidate: 'novalidate' } do |f| %>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group text-center">
                  <%= f.label :description, "Question Content" %>
                  <%= f.text_area :description, placeholder: "Write your question here...", class: 'form-control', required: true %>
                  <div class="invalid-feedback">
                    Please provide the question description.
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group text-center">
                    <%= f.select(:category, @categories , {prompt: "Choose category"} , {:class => "form-control"}) %>
                  </div>
                </div>
              </div>

              <div class="col-lg-12 text-center">
                <%= f.submit "Create question", class: "btn btn-secondary btn-xl text-uppercase" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
