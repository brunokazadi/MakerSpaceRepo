          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= t('development_program.digital_badges.tables.professional_development.design_thinking') %></li>
            <li class="list-group-item"><%= t('development_program.digital_badges.tables.professional_development.entrepreneurship_basics') %></li>
            <li class="list-group-item"><%= t('development_program.digital_badges.tables.professional_development.project_management') %></li>
            <li class="list-group-item"><%= t('development_program.digital_badges.tables.professional_development.effective_communication') %></li>
          </ul>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <%= t('development_program.digital_badges.tables.manufacturing_technologies.title') %>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= t('development_program.digital_badges.tables.manufacturing_technologies.shop_fundamentals') %></li>
            <li class="list-group-item"><%= t('development_program.digital_badges.tables.manufacturing_technologies.lathe') %></li>
            <li class="list-group-item"><%= t('development_program.digital_badges.tables.manufacturing_technologies.mill') %></li>
            <li class="list-group-item"><%= t('development_program.digital_badges.tables.manufacturing_technologies.cnc') %></li>
            <li class="list-group-item"><%= t('development_program.digital_badges.tables.manufacturing_technologies.welding') %></li>
          </ul>
        </div>
      </div>
