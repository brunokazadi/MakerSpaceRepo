    <h2 class="text-center"><%= t('development_program.header') %></h2>
    <br>

    <% unless not signed_in? or @user.dev_program? %>

    <div class="h-100 p-4 bg-light border rounded-3 mb-2 text-center">
      <h2><%= t('development_program.not_in_dev_program.header').html_safe %></h2>
      <p><%= t('development_program.not_in_dev_program.content').html_safe %></p>
      <p><%= t('development_program.not_in_dev_program.link').html_safe %></p>
    </div>

    <% end %>

    <h3 class="text-center text-muted"><%= t('development_program.overview.header') %></h3>
    <p>
      <%= t('development_program.overview.paragraph') %>

      <%= image_tag('development_program/ceed_volunteering.png', class: 'img-fluid', alt: 'Diagram for the steps of volunteering') %>

    </p>

    <h4 class="mt-3 text-center text-muted"><%= t('development_program.learning_area.header').html_safe %></h4>

    <p>
      <%= t('development_program.learning_area.paragraph') %>
    </p>

    <h4 class="mt-3 mt-3 text-center text-muted"><%= t('development_program.proficient_projects.header').html_safe %></h4>

    <p>
      <%= t('development_program.proficient_projects.paragraph') %>
    </p>

