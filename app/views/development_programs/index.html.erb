            <li class="list-group-item"><%= t('development_program.digital_badges.tables.digital_technologies.embroidery') %></li>
          </ul>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <%= t('development_program.digital_badges.tables.professional_development.title') %>
