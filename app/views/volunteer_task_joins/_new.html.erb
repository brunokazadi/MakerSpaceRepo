<div class="col-md-6">
  <p>Add Volunteer to this Task:</p>
  <%= form_for @new_volunteer_join, url: {controller: "volunteer_task_joins", action: "create"} do |f| %>
    <%= f.hidden_field :volunteer_task_id, value: @volunteer_task.id %>
    <%= f.select :user_id, @volunteers, {prompt: "Choose Volunteer"}, {class: 'form-control bootstrap-select', 'data-live-search': 'true'} %>
    <br />
    <br />
    <%= f.submit "Add Volunteer", class: "btn btn-primary mb-5" %>
  <% end %>
</div>

<div class="col-md-6">
  <p>Remove Staff Responsible from this Task:</p>
  <%= form_for @new_volunteer_join, url: {controller: "volunteer_task_joins", action: "destroy"} do |f| %>
    <%= f.hidden_field :volunteer_task_id, value: @volunteer_task.id %>
    <%= f.select :user_id, @staff_in_task, {prompt: "Choose Staff"}, {class: 'form-control bootstrap-select', 'data-live-search': 'true'} %>
    <br />
    <br />
    <%= f.submit "Remove Staff", class: "btn btn-danger mb-5",
                 data: { confirm: 'Are you sure that you want to remove this user?' } %>
  <% end %>
</div>