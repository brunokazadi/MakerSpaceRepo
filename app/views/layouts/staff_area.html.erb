<!DOCTYPE html>
<html>
<head>
  <title>Staff Area</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= favicon_link_tag 'site-icon.jpg' %>
    <%= stylesheet_link_tag    "vendor",      :media => "all", :debug => false %>
    <%= javascript_include_tag "vendor",      :debug => false %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <link href='http://fonts.googleapis.com/css?family=Raleway:700,300,400' rel='stylesheet' type='text/css'>
</head>
<body>
	<%= render 'layouts/header' %>

  <% if flash[:notice] %>
    <div id="notice"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:alert] %>
    <div id="alert"><%= flash[:alert] %></div>
  <% end %>

  <%= render :partial => 'partials/announcements' %>

	<section id="setting" style="width:100%">
		<div class="setting-grid">
			<div class="setting-side-panel">
        <div class="panel-title"><%= link_to 'Staff Area', staff_index_path %></div>
				<ul>
		      <li class="setting-menu-item">
            <%= link_to 'Go To Kiosk', staff_dashboard_index_path, class: 'kiosk-button' %><br></br>
            <%= link_to 'New Training Session', new_staff_training_session_path, class: 'new-session' %><br></br>
            <%= link_to 'My Training Sessions', staff_training_sessions_path, class: 'my-sessions' %><br></br>
            <%= link_to 'Questions', questions_path, class: 'my-sessions' %><br></br>
            <%= link_to 'Announcements', announcements_path, class: 'my-sessions' %><br></br>
		      </li>
				</ul>
			</div>

			<%= yield %>

		</div>
	</section>
  <%= render 'layouts/footer' %>
</body>
</html>
