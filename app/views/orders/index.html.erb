<% provide(:title, "Orders") %>

<section class="p-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center mb-4">
        <h2>Your Orders</h2>
      </div>
    </div>
    <div class="text-center">
      <% if !@orders.present? %>
        <p class="text-center">
          You have no orders. Please check our <%= link_to "projects", proficient_projects_path(proficiency: true), class: "text-info" %> and add some items to your cart.
        </p>
      <% else %>
        <table class="table table-striped">

          <tr>
            <th>Product/Quantity</th>
            <th>Date</th>
            <th>Subtotal</th>
            <th>Status</th>
            <th>Total</th>
          </tr>

          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <% order.order_items.each do |order_item| %>
                    <p>
                      <b><%= link_to order_item.proficient_project.title, proficient_project_path(order_item.proficient_project.id) %></b> / <%= order_item.quantity %>
                    </p>
                  <% end %>
                </td>
                <td>
                  <%= order.created_at.strftime("%Y/%m/%d") %>
                </td>
                <td>
                  <%= order.subtotal %>
                </td>
                <td>
                  <%= order.order_status.name %>
                </td>
                <td>
                  <%= order.total %>
                </td>

              </tr>
            <% end %>
          </tbody>
        </table>




