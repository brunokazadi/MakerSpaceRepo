<section class="page-contents">

  <div class="edit-column">

    <div class="title">Last Updates 3D-Printers Usage</div>

    <div class="container" id="printer-div">
      <div id="printer-div-2"><%= link_to "Manage 3D Printers", staff_printers_printers_path, class: 'update-button'%></div>
    </div>

    <div>
      <h2>Ultimaker 2+</h2>
      <% @ultimaker_printer_ids.each do |printer_id| %>
          <% last_session = Printer.get_last_number_session(printer_id) %>
          <%= render :partial => 'updates', :locals => {:user_id => last_session.user_id,
                                                        :printer_id => last_session.printer_id,
                                                        :created_at => last_session.created_at.strftime(" | %A, %m/%d/%Y at %I:%M%p")} if last_session %>
      <% end %>

      <h2>Ultimaker 3</h2>
