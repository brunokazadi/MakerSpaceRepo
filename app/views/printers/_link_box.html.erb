<div class="text-center my-3 d-flex flex-row justify-content-center align-items-center gap-2">
    <%= link_to 'View Last Updates All 3D-Printers', staff_printers_updates_printers_path, class: 'btn btn-secondary' unless local_assigns[:staff_updates] %>
    <%= link_to 'Manage Printer Usage', staff_printers_printers_path, class: 'btn btn-secondary' unless local_assigns[:staff_printers] %>
    <%= link_to 'Printer Maintenance Log', printer_issues_path, class: 'btn btn-secondary' unless local_assigns[:printer_issues_index] %>
</div>
<% if @user.admin? %>
    <div class="text-center my-3 d-flex flex-row justify-content-center align-items-center gap-2">
        <%= link_to 'Add and Remove Printers', printers_path, class: 'btn btn-primary' unless local_assigns[:printer_index] %>
        <%= link_to 'Manage Printer Types', printer_types_path, class: 'btn btn-primary' unless local_assigns[:printer_types_index] %>
    </div>
<% end %>
