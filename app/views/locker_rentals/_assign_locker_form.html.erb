<%= form_with model: @locker_rental, class: 'container col-md-4' do |f| %>
    <div class="row row-cols-md-2">
        <%= f.label :locker_type_id, class: 'form-label' %>
        <div>
            <%= f.select :locker_type_id, options_for_select(@locker_types), {}, { class: 'form-select' } %>
        </div>
    </div>
    <div class="row row-cols-md-2">
        <%= f.label :locker_specifier, 'Locker number' %>
        <div>
            <%= f.select :locker_specifier, grouped_options_for_select(@available_lockers), {}, { class: 'form-select' } %>
        </div>
    </div>
    <div class="row row-cols-md-2">
        <%= f.label :rented_by_username, class: 'form-label' %>
        <div>
            <%= f.select :rented_by_username, options_for_select([]), { prompt: 'Select user...' }, { class: 'form-select', id: 'user_dashboard_select' } %>
        </div>
    </div>
    <div class="row row-cols-md-2">
        <%= f.label :owned_until, class: 'form-label' %>
        <div>
        <%= f.date_field :owned_until, { value: @end_of_this_semester, class: 'form-control' } %>
        </div>
    </div>
    <%= f.hidden_field :state, value: LockerRental.states[:active] %>
    <%= f.submit 'Assign locker', class: 'btn btn-success' %>
<% end %>
