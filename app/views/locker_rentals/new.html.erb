<%# this is getting messy%>
<h1 class="text-center mb-3">Assign locker to user</h1>
<%= form_with model: @locker_rental, class: 'container col-md-4' do |f| %>
    <div class="row row-cols-md-2">
        <%= f.label :locker_type, class: 'form-label' %>
        <div>
            <%= f.select :locker_type, options_for_select(@locker_types), {}, { class: 'form-select' } %>
        </div>
    </div>
    <div class="row row-cols-md-2">
        <%= f.label :locker_specifier, 'Locker number' %>
        <div>
            <%= f.select :locker_specifier, grouped_options_for_select(@available_lockers), {}, { class: 'form-select' } %>
        </div>
    </div>
    <div class="row row-cols-md-2">
        <%= f.label :rented_by, class: 'form-label' %>
        <div>
            <%= f.select :rented_by, options_for_select([]), { prompt: 'Select user...' }, { class: 'form-select', id: 'user_dashboard_select' } %>
        </div>
    </div>
    <%= f.submit 'Assign locker', class: 'btn btn-success' %>
<% end %>
<hr />
<%# end%>

